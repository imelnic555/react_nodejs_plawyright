{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./tests"]
  },
  "include": ["./**/*.ts", "./**/*.mjs"],
  "exclude": ["node_modules"]
}
